<h2>Sign up</h2>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-md-6">
    <%= link_to "Googleアカウントでログイン", user_google_oauth2_omniauth_authorize_path,
    method: :post , class: "btn btn-google btn-block btn-lg" %><br />
  </div>

  <div class="col-md-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード(再入力)" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
